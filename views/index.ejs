<%- include('partials/header') %> 
<nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand m-auto" href="/newTodo">
            Add Todo
            <i class="fas fa-plus-square"></i>
        </a>
    </div>
</nav>
<div class="container">
    <div class="row vh-100 justify-content-center">
        <div class="col-6 align-self-center">
                <% for(let i = 0; i < totalTodos; i++) { %> 
                        <div class="accordion">
                            <div class="accordion-item">
                                <div class="accordion-item-header ">
                                    <%=  SingleTodo[i].name %>  
                                    <form action="/<%= SingleTodo[i]._id %> " method="post">
                                        <div class = 'mr-2'><button class = "trashcan btn btn-danger"><i class="fas align-self-center fa-trash-alt"></i></button></div>
                                    </form>
                                </div>
                                <div class="accordion-item-body">
                                    <div class="accordion-item-body-content">
                                        <%= SingleTodo[i].description %> 
                                    </div>
                                </div>
                            </div>
                        </div>

                <% } %> 
        </div>
    </div>
</div>
<script src="index.js"></script>
<%- include('partials/footer') %> 